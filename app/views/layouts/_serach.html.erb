<%= if user_singed_in? %>
  <div class ="search_form">
    <!--urlで作成したルーティングに送る-->
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <!--入力した単語をwordに格納-->
      <%= f.test_field :word %>
      <!--options_for_select 配列から選択肢を生成-、それぞれrange,searchに格納->
      <%= f.select :range, options_for_select([['User'],['Book']]) %>
      <%= f.select :search, options_for_select([["完全一致","parfect_match"],["前方一致","forward_match"],["後方一致","backward_match"],["部分一致","partial_match"]]) %>
      <%= f.submit "検索", class: "btn btn-dark" %>
    <% end %>
  </div>
<% end %>